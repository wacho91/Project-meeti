<div class="card">
    <% if(meeti.grupo.imagen) { %>
        <img src="/uploads/grupos/<%= meeti.grupo.imagen %>">
    <% } else { %>
        <img src="/img/meeti.jpg">
    <% } %>
    <div class="card-texto">
        <% moment.locale('es') %>
        <% const fecha = `${meeti.fecha} ${meeti.hora}` %>
        <p class="fecha"><%= moment(fecha).format('LLLL') %> Horas </p>
        <a href="/meeti/<%= meeti.slug %>">
            <h3><%= meeti.titulo %></h3>
        </a>
        <div class="info-autor">
            
            <% if(usuario.imagen) { %>
                <div class="imagen">
                    <img src="/uploads/perfiles/<%= usuario.imagen %>">
                </div>
            <% } else {  %>
                <div class="imagen">
                    
                </div>
            <% } %>
            <div class="informacion">
                <p>Organizdo por:</p>
                <p class="autor">Cristian Gonzalez</p>
            </div>
        </div>
    </div>
</div>